[core]
    autocrlf = input
    compression = 9
    excludesfile = ~/.gitignore_global
    filemode = false
    pager = delta

[diff]
    mnemonicprefix = true
    colorMoved = default
[gpg]
	program = gpg
[commit]
	gpgsign = true

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    side-by-side = true
    line-numbers = true
[credential "https://dev.azure.com"]
	useHttpPath = true
